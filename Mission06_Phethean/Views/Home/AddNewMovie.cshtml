@{
}
@{
    ViewData["Title"] = "Add Movie";
}
@model AddMovieModel
<h1>Add Movie</h1>

<form method="post">
    <input type="hidden" asp-for="MovieId" />

    <div class="form-group">
        <label asp-for="Title">Title: </label>
        <input asp-for="Title" class="form-control" required />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Year">Year:</label>
        <input asp-for="Year" type="number" class="form-control" min="1888" max="2100" step="1" value="" required />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>
    <div class="form-group">
        <select asp-for="CategoryId">
            <option value="">Select a Category</option>
            @foreach (CategoryClass record in ViewBag.Category)
            {
                <option value="@record.CategoryId">@record.CategoryName</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Director">Director: </label>
        <input asp-for="Director" class="form-control" required />
        <span asp-validation-for="Director" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rating">Rating: </label>
        <select asp-for="Rating" class="form-control" required>
            <option value="NR">NR</option>
            <option value="UR">UR</option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
            <option value="NC-17">NC-17</option>
            <option value="TV-Y">TV-Y</option>
            <option value="TV-Y7">TV-Y7</option>
            <option value="TV-G">TV-G</option>
            <option value="TV-PG">TV-PG</option>
            <option value="TV-14">TV-14</option>
            <option value="TV-MA">TV-MA</option>
        </select>
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Edited">Edited: </label>
        <select asp-for="Edited" class="form-control" >
            <option value="">Select an Option</option>
            <option value="false">No</option>
            <option value="true">Yes</option>
        </select>
        <span asp-validation-for="Edited" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LentTo">Lent To:</label>
        <input asp-for="LentTo" class="form-control" />
        <span asp-validation-for="LentTo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CopiedToPlex">Copied To Plex? </label>
        <select asp-for="CopiedToPlex" class="form-control">
            <option value="">Select an Option</option>
            <option value="false">No</option>
            <option value="true">Yes</option>
        </select>
        <span asp-validation-for="Edited" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Notes">Notes: </label>
        <input asp-for="Notes" class="form-control" maxlength="25" />
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>

    <div asp-validation-summary="All"></div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>