@{
}

@model List<AddMovieModel>

<table class="table table-bordered">
    <thead class="fw-bold">
        <tr>
            <td>Movie ID</td>
            <td>Category ID</td>
            <td>Title</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Edited</td>
            <td>Lent To</td>
            <td>Copied To Plex?</td>
            <td>Notes</td>
        </tr>
    </thead>

    @foreach (var record in Model)
    {
        <tbody>
            <tr>
                <td>@record.MovieId</td>
                <td>@record.CategoryId</td>
                <td>@record.Title</td>
                <td>@record.Year</td>
                <td>@record.Director</td>
                <td>@record.Rating</td>
                <td>@record.Edited</td>
                <td>@record.LentTo</td>
                <td>@record.CopiedToPlex</td>
                <td>@record.Notes</td>
                <td><a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@record.MovieId">Edit</a></td>
                <td><a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@record.MovieId">Delete</a></td>
            </tr>
        </tbody>
    }

</table>